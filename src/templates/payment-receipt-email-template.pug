extends layout.pug

block content
  div(style="padding: 20px; font-family: 'Inter', sans-serif; color: #333;")
    h2(style="color: #000; font-size: 24px; font-weight: 600; margin-bottom: 20px;") Payment Receipt
    
    p(style="font-size: 16px; margin-bottom: 15px;") Hello #{firstName},
    p(style="font-size: 16px; margin-bottom: 25px;") Thank you for your payment! This email serves as your receipt for your recent transaction with Verrify.
    
    div(style="background-color: #f9fafb; border: 1px solid #e5e7eb; border-radius: 8px; padding: 20px; margin-bottom: 30px;")
      h3(style="font-size: 18px; margin-top: 0; margin-bottom: 15px; color: #111827; border-bottom: 1px solid #e5e7eb; padding-bottom: 10px;") Transaction Details
      
      table(style="width: 100%; border-collapse: collapse;")
        tr
          td(style="padding: 8px 0; color: #6b7280; font-size: 14px;") Order ID:
          td(style="padding: 8px 0; color: #111827; font-weight: 500; text-align: right; font-size: 14px;") #{orderId}
        tr
          td(style="padding: 8px 0; color: #6b7280; font-size: 14px;") Reference:
          td(style="padding: 8px 0; color: #111827; font-weight: 500; text-align: right; font-size: 14px;") #{reference}
        tr
          td(style="padding: 8px 0; color: #6b7280; font-size: 14px;") Date:
          td(style="padding: 8px 0; color: #111827; font-weight: 500; text-align: right; font-size: 14px;") #{date}
        tr
          td(style="padding: 8px 0; color: #6b7280; font-size: 14px;") Item:
          td(style="padding: 8px 0; color: #111827; font-weight: 500; text-align: right; font-size: 14px;") #{description}
        tr
          td(style="padding: 12px 0 8px 0; color: #111827; font-size: 16px; font-weight: 600; border-top: 1px solid #e5e7eb;") Total Paid:
          td(style="padding: 12px 0 8px 0; color: #111827; font-weight: 700; text-align: right; font-size: 18px; border-top: 1px solid #e5e7eb;") #{amountFormatted}
    
    p(style="font-size: 14px; color: #6b7280; margin-bottom: 10px;") You can view the full details of your transaction on your Verrify dashboard.
    
    div(style="margin-top: 30px; text-align: center;")
      a(href="#{dashboardUrl}" style="background-color: #000; color: #fff; text-decoration: none; padding: 12px 24px; border-radius: 6px; font-weight: 500; font-size: 14px; display: inline-block;") View Dashboard
    
    p(style="font-size: 14px; color: #6b7280; margin-top: 40px;") If you have any questions or concerns about this payment, please reply to this email or contact support.
