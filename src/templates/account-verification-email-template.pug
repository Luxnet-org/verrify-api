extends layout.pug

block content
  h1 Your one-time verification code
  
  .hero-illustration(style="background-color: #111827; padding: 40px; border-radius: 12px; margin-bottom: 24px; text-align: center;")
    // Using a placeholder for the "Lock/Key" illustration representing verification
    img(src="https://res.cloudinary.com/dj7reukeb/image/upload/v1770549816/Frame_2147228598_3_kci20a.png", alt="Verification Lock", style="display:inline-block; max-width: 100%; height: auto;")
  
  p(style="text-align: center; color: #6B7280; margin-bottom: 8px;") Dear #{username || 'User'},
  
  p(style="text-align: center;") Use the following One-Time Password (OTP) to verify your email address.
  
  // OTP Display
  div(style="text-align: center; margin: 30px 0;")
    span(style="display: inline-block; font-size: 32px; font-weight: 700; letter-spacing: 5px; color: #111827;") #{token}
  
  p(style="text-align: center; font-size: 14px; color: #9CA3AF;") This code is valid for 10 minutes.
  
  hr(style="border: 0; border-top: 1px solid #E5E7EB; margin: 24px 0;")
  
  p(style="font-size: 14px; color: #6B7280; text-align: center;") If you did not request this code, please ignore this email or contact support.
  
  p(style="text-align: center; margin-top: 30px;")
    | Best regards,
    br
    strong Verrify Team